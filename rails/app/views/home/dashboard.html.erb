<!-- This example requires Tailwind CSS v2.0+ -->
<div class="rounded-lg bg-white p-4 mb-4" >
  <h2 class="text-gray-500 text-xs font-medium uppercase tracking-wide">Teams</h2>
  <p>Teams represent a connection from a 3rd party service like Slack or Basecamp to Gatewood.</p>
  <ul role="list" class="mt-3 grid grid-cols-1 gap-5 sm:gap-6 sm:grid-cols-2 lg:grid-cols-4">
    <% Team.all.each do |team| %>
      <li class="col-span-1 flex shadow-sm rounded-md">
        <div class="flex-shrink-0 flex items-center justify-center w-16 bg-pink-100 text-white text-sm font-medium rounded-l-md">
          <%= image_tag "icon_#{team.service}.png", class: "p-2" %>
        </div>
        <div class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md truncate">
          <div class="flex-1 px-4 py-2 text-sm truncate">
            <%= link_to team.name, edit_team_path(team), class:"text-gray-900 font-medium hover:text-gray-600" %>
            <p class="text-gray-500"><%= pluralize(team.projects.count, "project") %></p>
          </div>
          <div class="flex-shrink-0 pr-2">
            <button type="button" class="w-8 h-8 bg-white inline-flex items-center justify-center text-gray-400 rounded-full bg-transparent hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              <%= heroicon "solid/dots-vertical" %>
            </button>
          </div>
        </div>
      </li>
    <% end %>

    <li class="col-span-1 flex shadow-sm rounded-md">
        <div class="flex-shrink-0 flex items-center justify-center w-16 bg-emerald-600 text-white text-sm font-medium rounded-l-md">NEW</div>
        <div class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md truncate">
          <div class="flex-1 px-4 py-2 text-sm truncate">
            <%= link_to new_team_path, class: "text-gray-900 font-medium hover:text-gray-600" do %>
              New Team
              <p class="text-gray-500">Connect another workspace...</p>
            <% end %>
          </div>
        </div>
    </li>
  </ul>
</div>

<div class="rounded-lg bg-white p-4 mb-4">
  <h2 class="text-gray-500 text-xs font-medium uppercase tracking-wide">Projects</h2>
  <p>Projects connect one or more Teams together. That's how the magic happens.</p>
  <ul role="list" class="mt-3 grid grid-cols-1 gap-5 sm:gap-6 sm:grid-cols-2 lg:grid-cols-4">
    <% Project.all.each do |project| %>
      <li class="col-span-1 flex shadow-sm rounded-md">
        <div class="flex-shrink-0 flex items-center justify-center w-16 bg-pink-100 text-gray-900 text-sm font-medium rounded-l-md">
          <%= project.name[0...2].upcase %>
        </div>
        <div class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md truncate">
          <div class="flex-1 px-4 py-2 text-sm truncate">
            <%= link_to project.name, project, class:"text-gray-900 font-medium hover:text-gray-600" %>
            <p class="text-gray-500">Something something</p>
          </div>
          <div class="flex-shrink-0 pr-2">
            <button type="button" class="w-8 h-8 bg-white inline-flex items-center justify-center text-gray-400 rounded-full bg-transparent hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              <%= heroicon "solid/dots-vertical" %>
            </button>
          </div>
        </div>
      </li>
    <% end %>

    <li class="col-span-1 flex shadow-sm rounded-md">
        <div class="flex-shrink-0 flex items-center justify-center w-16 bg-emerald-600 text-white text-sm font-medium rounded-l-md">NEW</div>
        <div class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md truncate">
          <div class="flex-1 px-4 py-2 text-sm truncate">
            <%= link_to new_project_path, class: "text-gray-900 font-medium hover:text-gray-600" do %>
              New Project
              <p class="text-gray-500">Create another project...</p>
            <% end %>
          </div>
        </div>
    </li>
  </ul>
</div>