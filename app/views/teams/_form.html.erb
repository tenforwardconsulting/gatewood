<%= form_with model: team, class: "contents", data: {turbo: false} do |form| %>
  <% if team.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <% if team.new_record? %>
    <div class="my-5">
      <%= form.label :service, "Type", class: "block" %>
      <%= form.select :service, Team.service_options, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
  <% else %>
    <p class="my-5">
      <strong class="block font-medium mb-1">Service:</strong>
      <%= @team.service %>
      <% if @team.service_id.present? %>
        (<%= @team.service_id %>)
      <% else %>
        <span class="text-red-600">(Not connected)</span>
      <% end %>
    </p>
  <% end %>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
