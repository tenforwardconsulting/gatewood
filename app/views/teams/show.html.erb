<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto bg-white p-6">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div id="<%= dom_id @team %>">
      <p class="my-5">
        <strong class="block font-medium mb-1">Name:</strong>
        <%= @team.name %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Service:</strong>
        <%= @team.service %>
        <% if @team.service_id.present? %>
          (<%= @team.service_id %>)
        <% else %>
          <span class="text-red-600">(Not connected)</span>
        <% end %>
      </p>
    </div>

    <% if @team.basecamp? %>
      <%= link_to 'Re-authenticate', auth_basecamp_path(team: @team), class: "rounded-lg py-3 ml-2 px-5 bg-green-200 inline-block font-medium" %>
    <% end %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this team', team_path(@team), method: :delete, data: {"turbo_confirm": "Are you sure?"}, class: "mt-2 rounded-lg py-3 px-5 bg-red-300 font-medium" %>
    </div>
    <%= link_to 'Back', dashboard_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium" %>
  </div>
</div>
